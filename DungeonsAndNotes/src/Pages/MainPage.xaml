<Page x:Class="DungeonsAndNotes.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DungeonsAndNotes.Pages"
      mc:Ignorable="d"
      Title="MainPage" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
        <TextBlock Grid.Row="5" Margin="20" TextWrapping="Wrap">
            <Hyperlink NavigateUri="LoginPage.xaml">
                <Run Text="Login here"/>
            </Hyperlink>
            <Hyperlink NavigateUri="RegistrationPage.xaml">
                <Run Text="Register here"/>
            </Hyperlink>
        </TextBlock>
        
                
    </Grid>
</Page>
